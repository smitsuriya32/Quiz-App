@model Exam_Management.Models.Paper

@{
    ViewBag.Title = "ShowPaper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>
        Paper <span>
            @if (Model.Status == "Pending")
            {
                @Html.ActionLink("Approve", "ApprovePaper", new {id = Model.Id}, new { @class = "btn btn-success" })
                <span> | </span>
                @Html.ActionLink("Reject", "RejectPaper", new {id = Model.Id}, new { @class = "btn btn-danger" })
            }
        </span>
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>

<div>
    @foreach (var q in ViewBag.ques)
    {
        <h4>@q.QuestionText</h4>
        <p>Options: @q.OptionA</p>
        <p>Options: @q.OptionB</p>
        <p>Options: @q.OptionC</p>
        <p>Options: @q.OptionD</p>
        <p>Correct Answer: @q.CorrectAnswer</p>
        @Html.ActionLink("Edit", "EditQuestion", new { id = q.Id }, new { @class = "btn btn-warning" })
        <span>  </span>
        @Html.ActionLink("Delete", "DeleteQuestion", new { id = q.Id }, new { @class = "btn btn-danger" })
    }
    <hr />
</div>

<p>
    @Html.ActionLink("Back", "PaperManager",null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Edit", "EditPaper", new { id = Model.Id }, new { @class = "btn btn-success" })
</p>
